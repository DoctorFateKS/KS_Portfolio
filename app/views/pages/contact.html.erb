<section class="contact-hero">
  <div class="contact-hero-container">
    <span class="contact-badge">Get In Touch</span>
    
    <h1 class="contact-main-title">
      Let's Build Something <span class="text-highlight-red">Extraordinary</span>
    </h1>
    
    <p class="contact-subtitle">
      Looking for a senior Ruby developer who cares about code quality and product impact? 
      Let's discuss your project.
    </p>
  </div>
</section>

<section class="contact-grid-section">
  <div class="contact-main-grid">
    
    <div class="contact-card form-card">
      <header class="card-header">
        <h2 class="card-title">Send a Message</h2>
        <p class="card-subtitle">Fill out the form below and I'll get back to you as soon as possible.</p>
      </header>

      <%= form_with url: "#", class: "contact-form" do |f| %>
        <div class="form-row">
          <div class="field">
            <%= f.label :name, "Name *" %>
            <%= f.text_field :name, placeholder: "John Doe", required: true %>
          </div>
          <div class="field">
            <%= f.label :email, "Email *" %>
            <%= f.email_field :email, placeholder: "john@company.com", required: true %>
          </div>
        </div>

        <div class="form-row">
          <div class="field">
            <%= f.label :company, "Company" %>
            <%= f.text_field :company, placeholder: "Your Company" %>
          </div>
          <div class="field">
            <%= f.label :project_type, "Project Type" %>
            <%= f.select :project_type, ["Select a type", "New Project", "Consulting", "Long-term Contract"], {}, class: "custom-select" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :message, "Message *" %>
          <%= f.text_area :message, placeholder: "Tell me about your project, timeline, and any specific requirements...", rows: 5, required: true %>
        </div>

        <button type="submit" class="btn-send">
          <span>Send Message</span>
          <span class="icon-arrow">‚Üí</span>
        </button>
      <% end %>
    </div>

    <div class="contact-sidebar">
      
      <div class="contact-card info-card">
